<% body_append 'page-signin' %>

<!-- Page background -->
	<div id="page-signin-bg">
		<!-- Background overlay -->
		<div class="overlay"></div>
		<!-- Replace this with your bg image -->
		<%= image_tag('signin-bg.jpg') %>
	</div>
	<!-- / Page background -->

	<!-- Container -->
	<div class="signin-container">

		<!-- Left side -->
		<div class="signin-info">
			<a href="index.html" class="logo">
				<%= image_tag('logo-big.png',style: 'margin-top: -5px;') %>
				&nbsp;CrowdTrack
			</a> <!-- / .logo -->
			<div class="slogan">
				Simples. Seguro. A Qualquer Hora.
			</div> <!-- / .slogan -->
			<ul>
				<li><i class="fa fa-outdent signin-icon"></i> Transporte público inteligente</li>
				<li><i class="fa fa-bus signin-icon"></i> Veja a rota dos ônibus em tempo real</li>
				<li><i class="fa fa-file-text-o signin-icon"></i> Espere a notificação que seu ônibus está próximo</li>
			</ul> <!-- / Info list -->
		</div>
		<!-- / Left side -->

		<!-- Right side -->
		<div class="signin-form">

			<!-- Form -->
			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="signin-text">
					<span>Faça o login para utilizar o sistema.</span>
				</div> <!-- / .signin-text -->

				<div class="form-group w-icon">
					<%= f.input :email, placeholder:"E-mail", label: false, required: true, autofocus: true, input_html: { :class => "form-control input-lg"}  %>
					<span class="fa fa-user signin-form-icon"></span>
				</div> <!-- / Username -->

				<div class="form-group w-icon">
					<%= f.input :password, placeholder:"Senha", label: false, required: true, autofocus: true, input_html: { :class => "form-control input-lg"}  %>
					<span class="fa fa-lock signin-form-icon"></span>
				</div> <!-- / Password -->

				<div class="form-actions">
					<input type="submit" value="Entrar" class="signin-btn bg-primary">
					<a href="#" class="forgot-password" id="forgot-password-link">Equeceu sua senha?</a>
				</div> <!-- / .form-actions -->
			<% end %>
			<!-- / Form -->

			<!-- "Sign In with" block -->
			<div class="signin-with">
				<!-- Facebook -->
				<a href="index.html" class="signin-with-btn" style="background:#4f6faa;background:rgba(79, 111, 170, .8);">Fazer login utilizando <span>Facebook</span></a>
			</div>
			<!-- / "Sign In with" block -->

			<!-- Password reset form -->
			<div class="password-reset-form" id="password-reset-form">
				<div class="header">
					<div class="signin-text">
						<span>Recuperar Senha</span>
						<div class="close">&times;</div>
					</div> <!-- / .signin-text -->
				</div> <!-- / .header -->

				<!-- Form -->
				<form action="index.html" id="password-reset-form_id">
					<div class="form-group w-icon">
						<input type="text" name="password_reset_email" id="p_email_id" class="form-control input-lg" placeholder="Enter your email">
						<span class="fa fa-envelope signin-form-icon"></span>
					</div> <!-- / Email -->

					<div class="form-actions">
						<input type="submit" value="SEND PASSWORD RESET LINK" class="signin-btn bg-primary">
					</div> <!-- / .form-actions -->
				</form>
				<!-- / Form -->
			</div>
			<!-- / Password reset form -->
		</div>
		<!-- Right side -->
	</div>
	<!-- / Container -->

	<div class="not-a-member">
		Não se registrou? <a href="pages-signup.html">Registre-se aqui</a>
	</div>


