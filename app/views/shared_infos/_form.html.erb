<%= simple_form_for @shared_info, defaults: { input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } }  do |f| %>
  <div class="panel colourable">
	  <div class="panel-heading">
	    <span class="panel-title">shared_info</span>
	  </div>
	  <div class="panel-body">
		  <%= f.error_notification %>

		  <div class="form-inputs">
		    <%= f.input :capacity_rank, label_html: { class: 'col-sm-2' } %>
		    <%= f.input :traffic_rank, label_html: { class: 'col-sm-2' } %>
		    <%= f.input :comments, label_html: { class: 'col-sm-2' } %>
		    <%= f.association :trip, label_html: { class: 'col-sm-2' } %>
		    <%= f.association :user, label_html: { class: 'col-sm-2' } %>
		  </div>
		<div class="form-group" style="margin-bottom: 0;">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.button :submit, input_html: {class: "btn btn-primary" } %>
			</div>
		</div>
	  </div>
  </div>
<% end %>
