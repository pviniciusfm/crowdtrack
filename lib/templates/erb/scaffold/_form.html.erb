<%%= simple_form_for @<%= singular_table_name %>, defaults: { input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } }  do |f| %>
  <div class="panel colourable">
	  <div class="panel-heading">
	    <span class="panel-title"><%= singular_table_name %></span>
	  </div>
	  <div class="panel-body">
		  <%%= f.error_notification %>

		  <div class="form-inputs">
		  <%- attributes.each do |attribute| -%>
		    <%%= f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %>, label_html: { class: 'col-sm-2' } %>
		  <%- end -%>
		  </div>
		<div class="form-group" style="margin-bottom: 0;">
			<div class="col-sm-offset-2 col-sm-10">
				<%%= f.button :submit, input_html: {class: "btn btn-primary" } %>
			</div>
		</div>
	  </div>
  </div>
<%% end %>
