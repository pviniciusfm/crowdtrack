					<% end %>
				</li>
			</ul> <!-- / .navigation -->
			<div class="menu-content">
				<a href="https://docs.google.com/uc?export=download&id=0B0WcymPd-XTDbEN0bVBxcW1sMms" class="btn btn-primary btn-block btn-outline dark"><span class="mm-text">Download Aplicativo</span></a>
			</div>
		</div> <!-- / #main-menu-inner -->
	</div> <!-- / #main-menu -->
