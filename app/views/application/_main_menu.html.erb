					</div> -->
					<a href="#" class="close">&times;</a>
				</div>
			</div>
			<ul class="navigation">
				<li>
					<%= link_to(dashboard_path) do %>
						<i class="menu-icon fa fa-bar-chart-o"></i><span class="mm-text">Dashboard</span>
					<% end %>
				</li>
				<li>
					<%= link_to(maps_path) do %>
						<i class="menu-icon fa fa-map-marker"></i><span class="mm-text">Mapa de Viagens</span>
					<%end %>
				</li>
				<li>
					<%= link_to(vehicles_path) do %>
						<i class="menu-icon fa fa-bus"></i><span class="mm-text">Veículos</span>
					<%end %>
				</li>
				<li>
					<%= link_to(routes_path) do %>
						<i class="menu-icon fa fa-road"></i><span class="mm-text">Rotas</span>
					<%end %>
				</li>
				<li>
					<%= link_to(employees_path) do %>
