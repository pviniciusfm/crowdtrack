<div class="page-header">
  <i class="fa fa-bus page-header-icon"></i>
  <h1>Veículos Cadastrados</h1>
</div>

<div class="form-group-margin">
  <%= link_to 'Novo Veículo', new_vehicle_path, class: 'btn btn-labeled btn-primary' %>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= Vehicle.human_attribute_name(:description) %></th>
      <th><%= Vehicle.human_attribute_name(:public_identifier)%></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.description %></td>
        <td><%= vehicle.public_identifier %></td>
        <!-- <td><%= link_to 'Show', vehicle %></td> -->
        <td><%= link_to 'Editar', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Deletar', vehicle, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        <td><%= link_to "QrCode", qrcode_vehicle_path(vehicle), :"data-toggle" => 'modal', :"data-target" => '#modalQrCode' %>  </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modalQrCode" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        </div> <!-- /.modal-content -->
    </div> <!-- /.modal-dialog -->
</div> <!-- /.modal -->