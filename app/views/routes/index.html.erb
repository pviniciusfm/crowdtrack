<h1>Listing routes</h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Company</th>
      <th>Initial checkpoint</th>
      <th>Final checkpoint</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.label %></td>
        <td><%= route.company_id %></td>
        <td><%= route.initial_checkpoint_id %></td>
        <td><%= route.final_checkpoint_id %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Route', new_route_path %>
