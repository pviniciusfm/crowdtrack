<%= simple_form_for @track, defaults: { input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } }  do |f| %>
  <div class="panel-heading">
    <span class="panel-title">track</span>
  </div>
  <div class="panel-body">
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.association :trip, label_html: { class: 'col-sm-2' } %>
	    <%= f.input :latitude, label_html: { class: 'col-sm-2' } %>
	    <%= f.input :longitude, label_html: { class: 'col-sm-2' } %>
	    <%= f.input :accuracy, label_html: { class: 'col-sm-2' } %>
	  </div>
	<div class="form-group" style="margin-bottom: 0;">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.button :submit, input_html: {class: "btn btn-primary" } %>
		</div>
	</div>
  </div>
<% end %>
